<h2>Register form:</h2>
<form action="/register" method="POST">
    <div>
        <label>Email:</label>
        <input id="email" name="email" type="email" required/>
    </div>
    <div>
        <label>Name:</label>
        <input id="user" name="user" type="text" required/>
    </div>
    <div>
        <label>Pass:</label>
        <input id="pass" name="pass" type="password" required/>
    </div>
    <input type="submit"/>
</form>
<a href="/login">Login</a>

